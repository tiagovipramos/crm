# ==============================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO - CRM PROTECAR
# ==============================================
# Este arquivo contém configurações para ambiente de desenvolvimento local
# Usado quando NODE_ENV=development

# ==============================================
# SERVIDOR
# ==============================================
PORT=3001
NODE_ENV=development

# ==============================================
# BANCO DE DADOS MYSQL (DOCKER)
# ==============================================
# Para uso com Docker Compose, o host deve ser o nome do serviço
DB_HOST=mysql
DB_PORT=3306
DB_NAME=protecar_crm
DB_USER=root
DB_PASSWORD=protecar_dev_2025

# ==============================================
# AUTENTICAÇÃO JWT
# ==============================================
# Chave para desenvolvimento (NÃO usar em produção!)
JWT_SECRET=dev_secret_key_not_for_production_12345678
JWT_EXPIRES_IN=7d

# ==============================================
# FRONTEND E CORS
# ==============================================
FRONTEND_URL=http://localhost:3000

# ==============================================
# UPLOADS
# ==============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ==============================================
# LOGS E DEBUG
# ==============================================
LOG_LEVEL=debug
DEBUG=true

# ==============================================
# WHATSAPP (Desenvolvimento)
# ==============================================
WHATSAPP_SESSION_PATH=./whatsapp-session
